<!DOCTYPE rdf:RDF [
    <!ENTITY owl "http://www.w3.org/2002/07/owl#" >
    <!ENTITY xsd "http://www.w3.org/2001/XMLSchema#" >
    <!ENTITY owl2xml "http://www.w3.org/2006/12/owl2-xml#" >
    <!ENTITY rdfs "http://www.w3.org/2000/01/rdf-schema#" >
    <!ENTITY rdf "http://www.w3.org/1999/02/22-rdf-syntax-ns#" >
    <!ENTITY sample "http://sample.owl#" >
]>


<rdf:RDF xmlns="http://sample.owl#"
     xml:base="http://sample.owl"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     xmlns:sample="http://sample.owl#">
    <owl:Ontology rdf:about="http://sample.owl"/>


    <!--************* Class definitions ************-->
    <owl:Class rdf:about="&sample;Object">
        <rdfs:subClassOf rdf:resource="http://www.w3.org/2002/07/owl#Thing"/>
    </owl:Class>

    <owl:Class rdf:about="&sample;Location">
        <rdfs:subClassOf rdf:resource="http://www.w3.org/2002/07/owl#Thing"/>
    </owl:Class>

    <!--*********************************************-->

    <!--*********** Subclass definitions ************-->

    <!-- Location subclass definitions -->
    <owl:Class rdf:about="&sample;Room">
        <rdfs:subClassOf rdf:resource="&sample;Location"/>
    </owl:Class>

    <!-- Object subclass definitions -->
    <owl:Class rdf:about="&sample;Furniture">
        <rdfs:subClassOf rdf:resource="&sample;Object"/>
    </owl:Class>

    <owl:Class rdf:about="&sample;Table">
        <rdfs:subClassOf rdf:resource="&sample;Furniture"/>
    </owl:Class>
    <owl:Class rdf:about="&sample;WorkTable">
        <rdfs:subClassOf rdf:resource="&sample;Table"/>
    </owl:Class>

    <owl:Class rdf:about="&sample;Drinkware">
        <rdfs:subClassOf rdf:resource="&sample;Object"/>
    </owl:Class>
    <owl:Class rdf:about="&sample;Mug">
        <rdfs:subClassOf rdf:resource="&sample;Drinkware"/>
    </owl:Class>
    <!--*********************************************-->


    <!--************ Property definitions ***********-->

    <owl:ObjectProperty rdf:about="&sample;locatedAt">
        <rdf:type rdf:resource="&owl;FunctionalProperty" />
        <rdfs:domain rdf:resource="&sample;Object"/>
        <rdfs:range rdf:resource="&sample;Room"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="&sample;defaultStoringLocation">
        <rdf:type rdf:resource="&owl;FunctionalProperty" />
        <rdfs:domain rdf:resource="&sample;Object"/>
        <rdfs:range rdf:resource="&sample;Furniture"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="&sample;heightOf">
        <rdfs:domain rdf:resource="&sample;Object"/>
        <rdfs:range rdf:resource="xsd:float"/>
    </owl:ObjectProperty>
    <!--*********************************************-->


    <!--************** Class Instances **************-->

    <owl:NamedIndividual rdf:about="&sample;HomeOffice">
        <rdf:type rdf:resource="&sample;Room" />
    </owl:NamedIndividual>

    <owl:NamedIndividual rdf:about="&sample;Desk">
        <rdf:type rdf:resource="&sample;WorkTable" />
    </owl:NamedIndividual>

    <owl:NamedIndividual rdf:about="&sample;CoffeeMug">
        <rdf:type rdf:resource="&sample;Mug" />
    </owl:NamedIndividual>

    <!--*********************************************-->


    <!--************** Property Assertions **************-->

    <rdf:Description rdf:about="&sample;Desk">
        <locatedAt rdf:resource="&sample;HomeOffice"/>
    </rdf:Description>
    <rdf:Description rdf:about="&sample;CoffeeMug">
        <defaultStoringLocation rdf:resource="&sample;Desk"/>
    </rdf:Description>
    <rdf:Description rdf:about="&sample;Desk">
        <heightOf rdf:resource="&sample;0.7"/>
    </rdf:Description>
    <!--*********************************************-->


</rdf:RDF>
